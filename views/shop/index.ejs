<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success <%=noMessage ? 'hidden' : '' %>">
            <%= successMsg%>
        </div>
    </div>
</div>


<div class="row" style="margin-top: 15vh"> 
    <% List.map(i => { %>
             <div class="col-sm-6 col-md-4"> 
                 <div class="thumbnail"> 
                     <img src="<%= i.imagePath%>" alt="..." class="img-responsive"> 
                     <div class="caption">
                        <h3><%= i.title%></h3> 
                        <p class="description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. A consequuntur debitis delectus deserunt dolore dolorem eum 
                        inventore nobis omnis perferendis possimus quas repellat soluta, sunt voluptate, voluptates! Assumenda, nulla?</p> 
                         <div class="clearfix"> 
                            <div class="price pull-left">Rs- <%= i.price.toFixed(2)%></div> 
                            <a href="/addcart/<%= i._id%>" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a> 
                         </div> 
                     </div> 
                 </div> 
              </div> 
              <% }) %>
            </div> 

