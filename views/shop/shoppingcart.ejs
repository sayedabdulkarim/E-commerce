<% if(products){ %>
  <div class="row" style="margin-top: 15vh">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
         <% products.map(i => { %>
            <li class="list-group-item">
              <span class="badge"><%= i.qty%></span>
              <strong><%= i.item.title%></strong>
              <span class="label label-success">Rs. <%= i.price.toFixed(2)%> /-</span>
              <div class="btn-group">
                <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" type="button">Action <span class="caret"></span></button>
                <ul class="dropdown-menu">
                  <li><a href="#">Reduced by 1</a></li>
                  <li><a href="#">Remove All</a></li>
                </ul>
              </div>
            </li>
         <% }) %>
        </ul>
      </div>
    </div>
    
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
          <strong>Total: Rs. <%= totalPrice.toFixed(2)%> /-</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
          <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
<% }else{ %>
  <div class="row"  style="margin-top: 15vh">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No items in cart</h2>
      </div>
  </div>
<% } %>

